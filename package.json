{
  "name": "politopicsweb",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "cacheCron",
    "workers/backend"
  ],
  "scripts": {
    "dev:localstack": "bash scripts/dev-localstack.sh",
    "build:frontend:local": "npm --prefix frontend run build:local",
    "r2:local:sync": "node scripts/sync-frontend-to-r2-local.mjs",
    "r2:asset:cors": "bash scripts/r2-asset-configure-cors.sh",
    "db:seed:local": "node terraform/seed/upload_articles.js --endpoint http://localstack:4566 --asset-base-url http://localhost:4570",
    "test:e2e:localstack": "bash scripts/test-e2e-localstack.sh",
    
    "dev:assets": "node scripts/generate-local-assets.js && node scripts/local-asset-server.js",
    "dev:nextjs:honoserver": "node scripts/dev-nextjs-honoserver.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "tsx": "^4.21.0"
  }
}
