{
  "name": "politopics",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "dev": "bash -c 'npm run dev:backend & npm run dev:frontend'",
    "dev:frontend": "npm --prefix frontend run dev",
    "build:frontend": "npm --prefix frontend run build",
    "lint:frontend": "npm --prefix frontend run lint",
    "dev:backend": "npm --prefix backend run dev",
    "build:backend": "npm --prefix backend run build",
    "build:local:backend": "npm --prefix backend run build:local",
    "deploy:localstack": "npm run build:local:backend && cd terraform && terraform apply -auto-approve -var-file=tfvars/localstack.tfvars",
    "test": ""
  }
}
