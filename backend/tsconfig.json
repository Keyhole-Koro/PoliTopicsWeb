{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDirs": ["src", "../shared"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "declaration": true,
    "composite": true,
    "paths": {
      "@shared/*": ["../shared/*"],
      "@data/*": ["../data/*"],
      "@common/*": ["../../common/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "../shared/**/*.ts", "../../common/src/**/*"],
  "references": [
    { "path": "../../common" }
  ],
  "exclude": ["node_modules", "dist"]
}
